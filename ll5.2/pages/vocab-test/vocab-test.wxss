/* pages/vocab-test/vocab-test.wxss */
@import "../../styles/design-system.wxss";

.test-container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

/* ==================== 顶部信息栏 ==================== */

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.test-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.test-progress {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.test-timer {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.timer-icon {
  font-size: 24rpx;
}

.timer-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-variant-numeric: tabular-nums;
}

.test-score {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.score-label {
  font-size: 22rpx;
  color: var(--text-tertiary);
}

.score-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #07C160;
  font-variant-numeric: tabular-nums;
}

/* ==================== 题目卡片 ==================== */

.question-card {
  flex: 1;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.word-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.word-text {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.word-phonetic {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-family: "Times New Roman", serif;
}

.question-prompt {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 32rpx;
}

/* ==================== 选项列表 ==================== */

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  position: relative;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 28rpx;
  background: var(--bg-secondary);
  border: 2rpx solid var(--border-light);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.option-item.selected {
  background: #E8F4FF;
  border-color: #3D7EFF;
}

.option-item.correct {
  background: #E8F8F1;
  border-color: #07C160;
}

.option-item.wrong {
  background: #FFEBE8;
  border-color: #FA5151;
}

.option-label {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border: 2rpx solid var(--border-regular);
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

.option-item.selected .option-label {
  background: #3D7EFF;
  border-color: #3D7EFF;
  color: #FFFFFF;
}

.option-item.correct .option-label {
  background: #07C160;
  border-color: #07C160;
  color: #FFFFFF;
}

.option-item.wrong .option-label {
  background: #FA5151;
  border-color: #FA5151;
  color: #FFFFFF;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
}

.option-icon {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 700;
}

.correct-icon {
  background: #07C160;
  color: #FFFFFF;
}

.wrong-icon {
  background: #FA5151;
  color: #FFFFFF;
}

/* ==================== 底部操作栏 ==================== */

.test-footer {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.btn-primary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #07C160;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #FFFFFF;
  color: var(--text-primary);
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid var(--border-regular);
  border-radius: 16rpx;
}

.btn-secondary::after {
  border: none;
}

.btn-text {
  width: 160rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: transparent;
  color: var(--text-secondary);
  font-size: 28rpx;
  border: none;
}

.btn-text::after {
  border: none;
}

/* ==================== AI提示弹窗 ==================== */

.ai-hint-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: flex-end;
}

.ai-hint-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.ai-hint-content {
  position: relative;
  width: 100%;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 32rpx;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.ai-hint-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.ai-hint-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.ai-hint-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-tertiary);
  background: var(--bg-secondary);
  border-radius: 50%;
}

.ai-hint-message {
  display: block;
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: var(--bg-secondary);
  border-radius: 16rpx;
  border-left: 4rpx solid #3D7EFF;
}

.ai-hint-actions {
  display: flex;
  gap: 16rpx;
}

.ai-hint-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.ai-hint-btn.primary {
  background: #3D7EFF;
  color: #FFFFFF;
}

.ai-hint-btn.secondary {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.ai-hint-btn::after {
  border: none;
}

/* ==================== 暗色模式 ==================== */

.theme-dark .test-header,
.theme-dark .question-card {
  background: #1E1E1E;
}

.theme-dark .option-item {
  background: #2A2A2A;
  border-color: #3A3A3A;
}

.theme-dark .option-label {
  background: #1E1E1E;
  border-color: #3A3A3A;
}

.theme-dark .btn-secondary {
  background: #2A2A2A;
  border-color: #3A3A3A;
}

.theme-dark .ai-hint-content {
  background: #1E1E1E;
}

.theme-dark .ai-hint-message {
  background: #2A2A2A;
}

.theme-dark .ai-hint-btn.secondary {
  background: #2A2A2A;
}

