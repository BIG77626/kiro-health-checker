/* pages/ai-assistant/ai-assistant.wxss - Tokens v0.2 */

/* ==================== 页面容器 ==================== */
.ai-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F8F9FB;
  box-sizing: border-box;
}

/* ==================== Tab切换区域 ==================== */
.ai-tabs {
  display: flex;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E7EB;
  padding: 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  flex-shrink: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  color: #6B7280;
  position: relative;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: #4F7FE8;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #4F7FE8;
  border-radius: 2rpx;
}

/* ==================== 对话Tab容器 ==================== */
.chat-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ==================== 欢迎区域 ==================== */
.welcome-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 48rpx;
  text-align: center;
}

.welcome-icon-placeholder {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #EBF4FF 0%, #DBEAFE 100%);
  border-radius: 50%;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #0F172A;
  margin-bottom: 12rpx;
  line-height: 64rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 44rpx;
  margin-bottom: 48rpx;
}

.welcome-suggestions {
  width: 100%;
  max-width: 600rpx;
}

.suggestions-title {
  font-size: 24rpx;
  color: #374151;
  display: block;
  margin-bottom: 16rpx;
  text-align: left;
}

.suggestion-btn {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #4F7FE8;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.2s ease;
}

.suggestion-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

/* ==================== 消息列表 ==================== */
.chat-messages {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow-y: scroll;
}

.message-wrapper {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.user-message {
  align-items: flex-end;
}

.ai-message {
  align-items: flex-start;
}

.message-container {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  max-width: 85%;
}

.user-message .message-container {
  flex-direction: row-reverse;
}

.message-avatar-placeholder {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: linear-gradient(135deg, #EBF4FF 0%, #DBEAFE 100%);
}

.message-bubble {
  max-width: 520rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  word-wrap: break-word;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 用户消息气泡 - 温和蓝，左上小圆角 */
.user-message .message-bubble {
  background: #4F7FE8;
  color: #FFFFFF;
  border-radius: 16rpx 4rpx 16rpx 16rpx;
}

/* AI消息气泡 - 白色，右上小圆角 */
.ai-message .message-bubble {
  background: #FFFFFF;
  color: #0F172A;
  border-radius: 4rpx 16rpx 16rpx 16rpx;
}

.message-text {
  display: block;
  white-space: pre-wrap;
}

.message-time {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 8rpx;
  padding: 0 16rpx;
}

/* ==================== AI打字中动画 ==================== */
.typing-bubble {
  padding: 24rpx 32rpx;
}

.typing-indicator {
  display: flex;
  gap: 8rpx;
}

.typing-dot {
  width: 8rpx;
  height: 8rpx;
  background: #4F7FE8;
  border-radius: 50%;
  animation: typing-bounce 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) {
  animation-delay: 0s;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing-bounce {
  0%, 60%, 100% {
    opacity: 0.3;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
    transform: translateY(-8rpx);
  }
}

/* ==================== 操作卡片（AI消息内） ==================== */
.action-card {
  margin-top: 16rpx;
  padding: 20rpx;
  background: #F8F9FB;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
  display: block;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #6B7280;
  display: block;
  margin-bottom: 16rpx;
  line-height: 36rpx;
}

.action-btn {
  width: 100%;
  background: #4F7FE8;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  padding: 16rpx;
  border-radius: 12rpx;
  border: none;
  line-height: 1.2;
}

.action-btn:active {
  background: #3D5FC8;
}

/* ==================== 快捷功能按钮区域 - 简化版（仅文字） ==================== */
.quick-actions {
  flex-shrink: 0;
  background: #FFFFFF;
  border-top: 1rpx solid #E5E7EB;
  padding: 16rpx 0;
}

.actions-scroll {
  width: 100%; /* ⭐ 关键：明确宽度 */
  white-space: nowrap; /* ⭐ 关键：防止换行 */
}

.actions-list {
  display: inline-flex; /* ⭐ 关键：inline-flex 允许横向滑动 */
  gap: 12rpx;
  padding: 0 32rpx;
}

/* 简化版卡片 - 仅文字 */
.action-item-simple {
  display: inline-flex; /* ⭐ 关键：inline-flex */
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: #F8F9FB;
  border-radius: 16rpx;
  border: 2rpx solid #E5E7EB;
  white-space: nowrap; /* ⭐ 关键：防止文字换行 */
  transition: all 0.3s ease;
}

.action-item-simple:active {
  background: #FFFFFF;
  border-color: #D1D5DB;
  transform: scale(0.98);
}

.action-label-simple {
  font-size: 24rpx;
  font-weight: 500;
  color: #6B7280;
  line-height: 1.4;
}

/* ==================== 输入栏 ==================== */
.input-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx; /* ⭐ 上方内边距20rpx */
  padding-bottom: 20rpx; /* ⭐ 底部固定20rpx，移除safe-area计算 */
  background: #FFFFFF;
  border-top: 1rpx solid #E5E7EB;
  gap: 16rpx;
  flex-shrink: 0;
  /* ⭐ 移除min-height，让它自适应内容高度 */
}

.input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  background: #F8F9FB;
  padding: 20rpx 24rpx; /* ⭐ 减小上下内边距 */
  border-radius: 24rpx;
  font-size: 32rpx;
  border: none;
  line-height: 1.5;
  height: 80rpx; /* ⭐ 固定高度，更紧凑 */
}

/* .clear-input-btn 已移除 - 简化输入框 */

.send-btn {
  background: transparent !important; /* ⭐ 去除背景色 */
  color: #0F172A !important; /* ⭐ 黑色字体 */
  padding: 16rpx 16rpx !important; /* ⭐ 进一步缩短宽度：24rpx → 16rpx */
  border-radius: 24rpx !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
  border: none !important; /* ⭐ 移除边框 */
  line-height: 1.2 !important;
  transition: all 0.2s ease !important;
  min-width: auto !important; /* ⭐ 允许更小的宽度 */
  box-shadow: none !important; /* ⭐ 强制去除阴影 */
  flex-shrink: 0 !important; /* ⭐ 防止按钮被压缩 */
  width: auto !important; /* ⭐ 自动宽度 */
}

.send-btn.active {
  background: transparent !important; /* ⭐ 激活状态也去除背景 */
  color: #0F172A !important; /* ⭐ 保持黑色字体 */
  border: none !important;
  box-shadow: none !important; /* ⭐ 去除阴影 */
}

.send-btn.active:active {
  background: #F3F4F6 !important; /* ⭐ 点击时轻微灰色背景 */
  transform: scale(0.96) !important;
  box-shadow: none !important;
}

/* ==================== 课程Tab ==================== */
.courses-tab {
  flex: 1;
  overflow: hidden;
}

.courses-scroll {
  height: 100%;
}

/* 课程分类 */
.course-categories {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E7EB;
  padding: 16rpx 0;
}

.categories-scroll {
  white-space: nowrap;
}

.categories-list {
  display: inline-flex;
  gap: 12rpx;
  padding: 0 32rpx;
}

.category-btn {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: #F8F9FB;
  color: #6B7280;
  font-size: 28rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.category-btn.active {
  background: #4F7FE8;
  color: #FFFFFF;
  font-weight: 600;
}

/* 课程列表 */
.courses-list {
  padding: 24rpx 32rpx;
}

.course-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.08);
  transition: all 0.2s ease;
}

.course-card:active {
  transform: scale(0.98);
}

.course-cover {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(135deg, #4F7FE8 0%, #10B981 100%);
}

.course-cover image {
  width: 100%;
  height: 100%;
}

.course-progress-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0,0,0,0.6);
  color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.course-info {
  padding: 24rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0F172A;
  line-height: 44rpx;
  margin-bottom: 8rpx;
  display: block;
}

.course-instructor {
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
  display: block;
}

.course-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #6B7280;
}

.meta-divider {
  color: #D1D5DB;
}

.rating {
  color: #F59E0B;
  font-weight: 600;
}

.course-tags {
  display: flex;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #F8F9FB;
  color: #6B7280;
  font-size: 22rpx;
  border-radius: 12rpx;
}

.course-btn {
  width: 100%;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  line-height: 1.2;
}

.btn-start {
  background: #4F7FE8;
  color: #FFFFFF;
}

.btn-start:active {
  background: #3D5FC8;
}

.btn-continue {
  background: #10B981;
  color: #FFFFFF;
}

.btn-continue:active {
  background: #059669;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 48rpx;
}

.empty-icon-placeholder {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
}

