/* pages/weak-points-detail/weak-points-detail.wxss - 薄弱点详情页面 */

/* ==================== 页面容器 ==================== */
.page-container {
  min-height: 100vh;
  background: #F5F7FA;
}

/* ==================== ① 顶部 Header ==================== */
.page-header {
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E7EB;
  padding: 32rpx 48rpx;
}

.header-nav {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 18rpx;
  background: #F3F4F6;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.back-btn:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-content {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.header-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%); /* ⭐ 统一蓝色主题 */
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
}

.header-subtitle {
  font-size: 22rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

/* ==================== ② 主内容区 ==================== */
.main-content {
  padding: 32rpx 48rpx 48rpx; /* ⭐ 顶部减少间距（Header已移除） */
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* 智能诊断报告卡片 */
.diagnosis-card {
  background: linear-gradient(135deg, #FEF3C7 0%, #FED7AA 50%, #FEF9C3 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  gap: 24rpx;
}

.header-icon-bg {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #F59E0B 0%, #F97316 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.header-icon-small {
  width: 48rpx;
  height: 48rpx;
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
}

.card-description {
  font-size: 24rpx;
  font-weight: 400;
  color: #374151;
  line-height: 1.6;
}

.improvement-hint {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.hint-icon {
  width: 32rpx;
  height: 32rpx;
}

.hint-text {
  font-size: 22rpx;
  font-weight: 500;
  color: #78350F;
  line-height: 1.4;
}

/* ==================== 薄弱点排行 ==================== */
.weak-points-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 96rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #E5E7EB;
  border-top-color: #6366F1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

/* 空状态 */
.empty-state {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 96rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.empty-icon-bg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #D1FAE5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-icon {
  width: 80rpx;
  height: 80rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 26rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.5;
}

/* ==================== 薄弱点列表 ==================== */
.weak-points-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.weak-point-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.weak-point-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.card-top-bar {
  height: 16rpx;
}

.bar-vocab {
  background: linear-gradient(90deg, #F97316 0%, #FB923C 100%);
}

.bar-reading {
  background: linear-gradient(90deg, #3B82F6 0%, #60A5FA 100%);
}

.bar-sentence {
  background: linear-gradient(90deg, #8B5CF6 0%, #A78BFA 100%);
}

.bar-translation {
  background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
}

.bar-writing {
  background: linear-gradient(90deg, #EC4899 0%, #F472B6 100%);
}

.card-content {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 卡片头部 */
.card-header-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.header-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.rank-number {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  flex-shrink: 0;
}

.rank-vocab {
  background: linear-gradient(135deg, #F97316 0%, #FB923C 100%);
}

.rank-reading {
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
}

.rank-sentence {
  background: linear-gradient(135deg, #8B5CF6 0%, #A78BFA 100%);
}

.rank-translation {
  background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
}

.rank-writing {
  background: linear-gradient(135deg, #EC4899 0%, #F472B6 100%);
}

.type-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.type-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.type-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
}

.severity-badge {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  line-height: 1.4;
}

.badge-severe {
  background: #FEE2E2;
  color: #991B1B;
}

.badge-moderate {
  background: #FED7AA;
  color: #9A3412;
}

.badge-mild {
  background: #FEF9C3;
  color: #854D0E;
}

.type-stats {
  font-size: 22rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  flex-shrink: 0;
  margin-top: 8rpx;
}

/* 进度条区域 */
.progress-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.progress-label {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

.progress-value {
  font-size: 26rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.4;
}

.progress-bar {
  width: 100%;
  height: 24rpx;
  background: #E5E7EB;
  border-radius: 12rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.fill-vocab {
  background: linear-gradient(90deg, #F97316 0%, #FB923C 100%);
}

.fill-reading {
  background: linear-gradient(90deg, #3B82F6 0%, #60A5FA 100%);
}

.fill-sentence {
  background: linear-gradient(90deg, #8B5CF6 0%, #A78BFA 100%);
}

.fill-translation {
  background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
}

.fill-writing {
  background: linear-gradient(90deg, #EC4899 0%, #F472B6 100%);
}

/* 统计数据网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-box {
  border-radius: 20rpx;
  padding: 24rpx;
}

.stat-gray {
  background: #F9FAFB;
}

.stat-vocab {
  background: #FFF7ED;
}

.stat-reading {
  background: #EFF6FF;
}

.stat-sentence {
  background: #F5F3FF;
}

.stat-translation {
  background: #F0FDF4;
}

.stat-writing {
  background: #FCE7F3;
}

.stat-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.stat-icon {
  width: 32rpx;
  height: 32rpx;
}

.stat-text {
  font-size: 20rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1.2;
}

.stat-gray .stat-value {
  color: #0F172A;
}

.stat-vocab .stat-value {
  color: #C2410C;
}

.stat-reading .stat-value {
  color: #1E40AF;
}

.stat-sentence .stat-value {
  color: #6D28D9;
}

.stat-translation .stat-value {
  color: #065F46;
}

.stat-writing .stat-value {
  color: #BE123C;
}

/* 操作按钮 - 简化版（无图标、无颜色、缩小尺寸） */
.action-btn-simple {
  width: auto;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  background: #F8F9FB;
  border: 2rpx solid #E5E7EB;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn-simple:active {
  background: #FFFFFF;
  border-color: #D1D5DB;
  transform: scale(0.98);
}

.btn-text-simple {
  font-size: 24rpx;
  font-weight: 500;
  color: #6B7280;
  line-height: 1.4;
  text-align: center;
}

/* ==================== 学习建议卡片 ==================== */
.recommendation-card {
  background: linear-gradient(135deg, #EDE9FE 0%, #DDD6FE 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.recommendation-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.recommendation-icon {
  width: 40rpx;
  height: 40rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
}

.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommendation-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.item-number {
  font-size: 24rpx;
  font-weight: 700;
  color: #6366F1;
  line-height: 1.6;
  flex-shrink: 0;
}

.item-text {
  flex: 1;
  font-size: 24rpx;
  font-weight: 400;
  color: #374151;
  line-height: 1.6;
}

/* ==================== 底部安全区 ==================== */
.bottom-spacer {
  height: 120rpx;
}

/* ==================== 暗色模式 ==================== */
.theme-dark .page-container {
  background: #0F172A;
}

.theme-dark .page-header {
  background: #1E293B;
  border-bottom-color: #334155;
}

.theme-dark .header-title,
.theme-dark .section-title,
.theme-dark .card-title {
  color: #F8FAFC;
}

.theme-dark .weak-point-card,
.theme-dark .empty-state {
  background: #1F2937;
}

