/* pages/test-result/test-result.wxss */
@import "../../styles/design-system.wxss";

.result-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F9FF 0%, #F7F8FA 100%);
  padding: 48rpx 32rpx;
}

/* ==================== 成绩卡片 ==================== */

.score-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 64rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.12);
  text-align: center;
}

.score-icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  border-radius: 50%;
}

.score-icon.excellent {
  background: linear-gradient(135deg, #FEF3C7 0%, #FCD34D 100%);
}

.score-icon.good {
  background: linear-gradient(135deg, #DBEAFE 0%, #93C5FD 100%);
}

.score-icon.pass {
  background: linear-gradient(135deg, #D1FAE5 0%, #6EE7B7 100%);
}

.score-icon.fail {
  background: linear-gradient(135deg, #FEE2E2 0%, #FCA5A5 100%);
}

.score-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.score-subtitle {
  display: block;
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-bottom: 32rpx;
}

.score-number {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.score-value {
  font-size: 96rpx;
  font-weight: 700;
  color: #3B82F6;
  line-height: 1;
  font-variant-numeric: tabular-nums;
}

.score-unit {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* ==================== 统计数据 ==================== */

.stats-card {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  font-variant-numeric: tabular-nums;
}

.stat-divider {
  width: 1rpx;
  background: var(--border-light);
  margin: 0 16rpx;
}

/* ==================== AI评价 ==================== */

.ai-evaluation {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.evaluation-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.evaluation-icon {
  font-size: 32rpx;
}

.evaluation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.evaluation-content {
  display: block;
  font-size: 26rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

/* ==================== 建议 ==================== */

.suggestions {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.suggestions-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-dot {
  flex-shrink: 0;
  font-size: 24rpx;
  color: #3B82F6;
  line-height: 1.8;
}

.suggestion-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

/* ==================== 操作按钮 ==================== */

.result-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 32rpx;
}

.btn-primary {
  height: 88rpx;
  line-height: 88rpx;
  background: #07C160;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  height: 88rpx;
  line-height: 88rpx;
  background: #FFFFFF;
  color: var(--text-primary);
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid var(--border-regular);
  border-radius: 16rpx;
}

.btn-secondary::after {
  border: none;
}

.btn-text {
  height: 88rpx;
  line-height: 88rpx;
  background: transparent;
  color: var(--text-secondary);
  font-size: 28rpx;
  border: none;
}

.btn-text::after {
  border: none;
}

/* ==================== 暗色模式 ==================== */

.theme-dark .result-container {
  background: linear-gradient(180deg, #1A1A2E 0%, #16213E 100%);
}

.theme-dark .score-card,
.theme-dark .stats-card,
.theme-dark .ai-evaluation,
.theme-dark .suggestions {
  background: #1E1E1E;
}

.theme-dark .btn-secondary {
  background: #2A2A2A;
  border-color: #3A3A3A;
}

