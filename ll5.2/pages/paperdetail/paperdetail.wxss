/* ==================== 页面容器 ==================== */
.paper-detail-page {
  min-height: 100vh;
  background: #F8F9FB;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 64rpx 32rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 8rpx solid #E5E7EB;
  border-top-color: #4F7FE8;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.4;
}

/* ==================== 试卷内容 ==================== */
.paper-content {
  padding-bottom: 120rpx;
}

/* ==================== 头部信息 ==================== */
.paper-header {
  padding: 48rpx 32rpx;
  background: #FFFFFF;
}

.header-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.header-icon-bg {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 8rpx 24rpx rgba(79, 127, 232, 0.3);
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.header-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.paper-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.3;
}

.paper-subtitle {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

/* ==================== 试卷信息卡片 ==================== */
.paper-info-card {
  padding: 32rpx;
  background: #F8F9FB;
  border-radius: 32rpx;
  margin-bottom: 48rpx;
}

.info-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1;
}

.stat-blue {
  color: #4F7FE8;
}

.stat-green {
  color: #10B981;
}

.stat-label {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

/* ==================== 标签 ==================== */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1.2;
}

.tag-blue {
  background: #DBEAFE;
  color: #1E40AF;
}

.tag-green {
  background: #D1FAE5;
  color: #065F46;
}

.tag-yellow {
  background: #FEF3C7;
  color: #92400E;
}

.tag-red {
  background: #FEE2E2;
  color: #991B1B;
}

/* ==================== 开始按钮 ==================== */
.start-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(79, 127, 232, 0.3);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(79, 127, 232, 0.4);
}

.start-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.2;
}

.start-btn-arrow {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

/* ==================== 文章列表 ==================== */
.passages-section {
  background: #FFFFFF;
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 32rpx;
  border-bottom: 2rpx solid #F8F9FB;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.2;
}

.section-count {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
}

.passages-list {
  display: flex;
  flex-direction: column;
}

.passage-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  border-bottom: 2rpx solid #F8F9FB;
  transition: all 0.3s ease;
}

.passage-item:active {
  background: #F8F9FB;
}

.passage-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.passage-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
  line-height: 1.4;
}

.passage-preview {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.passage-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.meta-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.meta-text {
  font-size: 20rpx;
  color: #6B7280;
  line-height: 1.4;
}

.meta-divider {
  font-size: 20rpx;
  color: #6B7280;
  margin: 0 8rpx;
}

.passage-arrow {
  flex-shrink: 0;
}

.arrow-bg {
  width: 64rpx;
  height: 64rpx;
  background: #EBF4FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* ==================== 错误状态 ==================== */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 64rpx 48rpx;
  text-align: center;
}

.error-icon-placeholder {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
  border-radius: 50%;
  opacity: 0.8;
}

.error-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.2;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.error-actions {
  display: flex;
  gap: 16rpx;
}

.btn-action {
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(79, 127, 232, 0.3);
}

.btn-primary:active {
  background: #3D5FC8;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: #F8F9FB;
  color: #6B7280;
  border: 2rpx solid #E5E7EB;
}

.btn-secondary:active {
  background: #FFFFFF;
}

/* ==================== 暗色模式 ==================== */
.theme-dark .paper-detail-page {
  background: #0B1220;
}

.theme-dark .paper-header,
.theme-dark .passages-section {
  background: #111827;
}

.theme-dark .paper-info-card {
  background: #1F2937;
}

.theme-dark .passage-item:active {
  background: #1F2937;
}

.theme-dark .section-header,
.theme-dark .passage-item {
  border-bottom-color: #374151;
}

.theme-dark .paper-title,
.theme-dark .section-title,
.theme-dark .passage-title,
.theme-dark .error-title {
  color: #F8FAFC;
}

.theme-dark .paper-subtitle,
.theme-dark .section-count,
.theme-dark .passage-preview,
.theme-dark .meta-text,
.theme-dark .error-message,
.theme-dark .loading-text {
  color: #94A3B8;
}

.theme-dark .arrow-bg {
  background: #374151;
}

.theme-dark .loading-spinner {
  border-color: #374151;
  border-top-color: #7AA0FF;
}
