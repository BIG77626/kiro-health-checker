/* components/cloze-question/cloze-question.wxss - 参考写作练习风格优化 */

.cloze-question {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 160rpx;
}

/* ==================== 文章区域 ==================== */

.cloze-passage {
  background: #FFFFFF;
  margin-bottom: 16rpx;
}

.passage-header {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #F1F5F9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.passage-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0F172A;
}

.passage-progress {
  font-size: 22rpx;
  color: #64748B;
  background: #F1F5F9;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.passage-content {
  max-height: 400rpx;
  padding: 24rpx 32rpx;
}

.passage-text {
  font-size: 28rpx;
  line-height: 2.2;
  color: #334155;
  text-align: justify;
  word-break: break-word;
  white-space: normal;
}

.text-part {
  color: #334155;
  display: inline;
  word-break: break-word;
}

.blank-part {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 100rpx;
  max-width: 200rpx;
  height: 52rpx;
  background: #F8FAFC;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 0 16rpx;
  margin: 0 6rpx;
  font-weight: 600;
  font-size: 26rpx;
  color: #64748B;
  transition: all 0.2s ease;
  vertical-align: middle;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.blank-part:active {
  transform: scale(0.98);
}

.blank-active {
  border-color: #4F7FE8;
  background: #EBF4FF;
  color: #4F7FE8;
}

.blank-filled {
  background: linear-gradient(135deg, #F8FAFC 0%, #EBF4FF 100%);
  border-color: #4F7FE8;
  color: #0F172A;
}

/* ==================== 当前题目区域 ==================== */

.current-question {
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.blank-num {
  font-size: 28rpx;
  font-weight: 600;
  color: #0F172A;
}

.context-hint {
  font-size: 24rpx;
  color: #4F7FE8;
  font-weight: 500;
}

.context-hint:active {
  opacity: 0.7;
}

/* 上下文提示框 */
.context-box {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #FFF4ED;
  border-radius: 12rpx;
  border-left: 4rpx solid #F59E0B;
}

.context-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #334155;
}

/* ==================== 选项区域 ==================== */

.options-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.option-card {
  background: #F8FAFC;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
  position: relative;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.option-card:active {
  transform: scale(0.98);
}

.option-selected {
  border-color: #4F7FE8;
  background: linear-gradient(135deg, #F8FAFC 0%, #EBF4FF 100%);
}

.option-correct {
  border-color: #10B981;
  background: #F0FDF4;
}

.option-wrong {
  border-color: #DC2626;
  background: #FEF2F2;
}

.option-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #0F172A;
  word-break: break-word;
}

.option-selected .option-text {
  color: #4F7FE8;
  font-weight: 600;
}

.option-correct .option-text {
  color: #10B981;
}

.option-wrong .option-text {
  color: #DC2626;
}

.check-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #10B981;
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
}

/* ==================== 词义辨析区域 ==================== */

.analysis-box {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #F8FAFC;
  border-radius: 12rpx;
  border-left: 4rpx solid #4F7FE8;
}

.analysis-title {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #0F172A;
  margin-bottom: 12rpx;
}

.analysis-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #334155;
}

/* ==================== 底部操作栏 ==================== */

.cloze-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  gap: 12rpx;
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
}

.btn:active {
  transform: scale(0.98);
}

.btn-prev,
.btn-next {
  flex: 0.8;
  background: #F8FAFC;
  color: #0F172A;
  border: 2rpx solid #E5E7EB;
}

.btn-answer {
  flex: 1.4;
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%);
  color: #FFFFFF;
}

.btn[disabled] {
  opacity: 0.3;
  pointer-events: none;
}

/* ==================== 深色模式 ==================== */

.theme-dark .cloze-question {
  background: #0F172A;
}

.theme-dark .cloze-passage,
.theme-dark .current-question {
  background: #1E293B;
}

.theme-dark .passage-header {
  border-bottom-color: #374151;
}

.theme-dark .passage-title,
.theme-dark .blank-num {
  color: #F9FAFB;
}

.theme-dark .passage-progress {
  background: #374151;
  color: #9CA3AF;
}

.theme-dark .text-part,
.theme-dark .context-text,
.theme-dark .analysis-text {
  color: #E5E7EB;
}

.theme-dark .blank-part {
  background: #111827;
  border-color: #374151;
  color: #9CA3AF;
}

.theme-dark .blank-active {
  background: #1E3A5F;
  border-color: #4F7FE8;
  color: #4F7FE8;
}

.theme-dark .blank-filled {
  background: linear-gradient(135deg, #1E293B 0%, #2D3E57 100%);
  border-color: #4F7FE8;
  color: #F9FAFB;
}

.theme-dark .option-card {
  background: #111827;
  border-color: #374151;
}

.theme-dark .option-text {
  color: #F9FAFB;
}

.theme-dark .option-selected {
  background: linear-gradient(135deg, #1E293B 0%, #2D3E57 100%);
  border-color: #4F7FE8;
}

.theme-dark .context-box,
.theme-dark .analysis-box {
  background: #111827;
}

.theme-dark .cloze-actions {
  background: #1E293B;
}

.theme-dark .btn-prev,
.theme-dark .btn-next {
  background: #111827;
  color: #F9FAFB;
  border-color: #374151;
}

/* ==================== 完型填空AI工具栏样式 ==================== */
@import "./cloze-ai-toolbar.wxss";
