/* 阅读AI提示 - 侧边栏气泡样式 */
.reading-ai-hint {
  position: fixed;
  z-index: 999;
  animation: slideIn 0.3s ease-out;
}

.hint-side {
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 280rpx;
}

.hint-top {
  top: 100rpx;
  right: 20rpx;
  width: 320rpx;
}

.hint-container {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border-left: 4rpx solid #4F7FE8;
}

.hint-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.hint-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.hint-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
}

.hint-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
  cursor: pointer;
}

.hint-close:active {
  opacity: 0.6;
}

.hint-message {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.hint-details {
  margin-bottom: 20rpx;
}

.hint-step {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.step-bullet {
  color: #4F7FE8;
  margin-right: 8rpx;
  font-weight: bold;
}

.step-text {
  flex: 1;
}

.hint-actions {
  display: flex;
  justify-content: center;
}

.hint-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  background: #4F7FE8;
  color: #FFFFFF;
  border-radius: 36rpx;
  font-size: 26rpx;
  border: none;
  text-align: center;
}

.hint-btn::after {
  border: none;
}

.hint-btn:active {
  background: #3D6DD6;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(100rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .hint-container {
    background: #2A2A2A;
    border-left-color: #5A8FFF;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  }
  
  .hint-title {
    color: #FFFFFF;
  }
  
  .hint-message {
    color: #E0E0E0;
  }
  
  .hint-step {
    color: #B0B0B0;
  }
  
  .step-bullet {
    color: #5A8FFF;
  }
  
  .hint-close {
    color: #B0B0B0;
  }
}

