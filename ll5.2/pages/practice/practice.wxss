/* pages/practice/practice.wxss - UI优化：统一设计系统 */

/* ==================== 页面容器 ==================== */
.practice-page {
  min-height: 100vh;
  background: #F5F7FA; /* ⭐ 统一背景色 */
  display: flex;
  flex-direction: column;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 64rpx 32rpx;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 8rpx solid #E5E7EB;
  border-top-color: #4F7FE8;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.4;
}

/* ==================== 答题内容 ==================== */
.practice-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  padding-bottom: 120rpx;
}

/* ==================== 开发中页面 ==================== */
.coming-soon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.coming-icon-placeholder {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  border-radius: 50%;
}

.coming-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.2;
  margin-bottom: 16rpx;
}

.coming-text {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.4;
  margin-bottom: 48rpx;
}

.btn-back {
  padding: 16rpx 48rpx;
  background: #4F7FE8;
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-back:active {
  background: #3D5FC8;
}

/* ==================== 题目容器 ==================== */
.question-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx; /* ⭐ 统一水平边距 */
  background: #FFFFFF;
  border-radius: 20rpx; /* ⭐ 统一圆角 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06); /* ⭐ 统一阴影强度 */
}

.question-type {
  font-size: 24rpx;
  font-weight: 500;
  color: #6B7280;
  line-height: 1.4;
}

.question-number {
  font-size: 24rpx;
  font-weight: 500;
  color: #6B7280;
  line-height: 1.4;
}

.question-content {
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx; /* ⭐ 统一圆角 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); /* ⭐ 统一阴影 */
}

.question-text {
  font-size: 32rpx;
  font-weight: 400;
  color: #0F172A;
  line-height: 2;
  display: block;
  word-break: break-word;
  white-space: normal;
  overflow-wrap: break-word;
}

.question-image {
  width: 100%;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx; /* ⭐ 统一圆角 */
}

.audio-container {
  margin-top: 32rpx;
}

.audio-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 16rpx 32rpx;
  background: #EBF4FF; /* ⭐ 保持蓝色系 */
  border-radius: 16rpx; /* ⭐ 统一圆角 */
  border: none;
  transition: all 0.2s ease; /* ⭐ 添加过渡 */
}

.audio-btn:active {
  background: #DBEAFE;
  transform: scale(0.98); /* ⭐ 添加缩放反馈 */
}

.audio-icon {
  width: 40rpx;
  height: 40rpx;
}

.audio-text {
  font-size: 28rpx;
  color: #4F7FE8;
  line-height: 1.2;
}

/* ==================== 选项区域 - 优化设计 ==================== */
.options-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx; /* ⭐ 统一内边距 */
  background: #FFFFFF;
  border-radius: 20rpx; /* ⭐ 统一圆角 */
  border: 2rpx solid #E5E7EB; /* ⭐ 减少边框宽度 */
  transition: all 0.2s ease; /* ⭐ 缩短过渡时间 */
}

.option-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06); /* ⭐ 添加点击阴影 */
}

.option-selected {
  border-color: #4F7FE8;
  background: linear-gradient(135deg, #F8FAFC 0%, #EBF4FF 100%);
}

.option-indicator {
  width: 64rpx;
  height: 64rpx;
  background: #F8F9FB;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.option-selected .option-indicator {
  background: #4F7FE8;
}

.option-letter {
  font-size: 32rpx;
  font-weight: 700;
  color: #6B7280;
  line-height: 1;
}

.option-selected .option-letter {
  color: #FFFFFF;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 400;
  color: #0F172A;
  line-height: 1.6;
}

.option-check {
  width: 48rpx;
  height: 48rpx;
  filter: invert(46%) sepia(98%) saturate(2618%) hue-rotate(210deg) brightness(95%) contrast(101%);
}

/* ==================== 解析区域 ==================== */
.explanation-card {
  padding: 32rpx;
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  border-radius: 20rpx; /* ⭐ 统一圆角 */
  box-shadow: 0 4rpx 12rpx rgba(251, 191, 36, 0.2); /* ⭐ 统一阴影 */
}

.explanation-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.explanation-icon-bg {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.explanation-icon {
  width: 32rpx;
  height: 32rpx;
}

.explanation-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #78350F;
  line-height: 1.4;
}

.explanation-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #92400E;
  line-height: 1.8;
}

/* ==================== 底部操作栏 ==================== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-action {
  flex: 1;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx; /* ⭐ 统一按钮圆角 */
  border: none;
  transition: all 0.2s ease; /* ⭐ 缩短过渡时间 */
}

.btn-primary {
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(79, 127, 232, 0.3);
}

.btn-primary:active {
  background: #3D5FC8;
  transform: translateY(2rpx);
}

.btn-secondary {
  background: #F5F7FA; /* ⭐ 统一背景色 */
  color: #6B7280;
  border: 2rpx solid #E5E7EB;
}

.btn-secondary:active {
  background: #FFFFFF;
  transform: scale(0.98); /* ⭐ 添加缩放反馈 */
}

.btn-success {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.btn-success:active {
  background: #047857;
  transform: translateY(2rpx);
}

/* ==================== 结果页面 ==================== */
.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 64rpx 32rpx;
  text-align: center;
}

.result-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 64rpx;
}

.result-icon-bg {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(251, 191, 36, 0.3);
}

.result-icon {
  width: 96rpx;
  height: 96rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.2;
  margin-bottom: 32rpx;
}

.result-score {
  font-size: 80rpx;
  font-weight: 700;
  color: #10B981;
  line-height: 1;
  margin-bottom: 16rpx;
}

.result-stats {
  display: flex;
  gap: 32rpx;
  margin-bottom: 64rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx; /* ⭐ 统一圆角 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); /* ⭐ 统一阴影 */
  min-width: 160rpx;
}

.stat-label {
  font-size: 24rpx;
  font-weight: 400;
  color: #6B7280;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.2;
}

.result-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
}

/* ==================== 错误状态 ==================== */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 64rpx 48rpx;
  text-align: center;
}

.error-icon-placeholder {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
  border-radius: 50%;
}

.error-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0F172A;
  line-height: 1.2;
  margin-bottom: 24rpx;
}

.error-message {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  margin-bottom: 64rpx;
}

/* ==================== 暗色模式 ==================== */
.theme-dark .practice-page {
  background: #0F172A; /* ⭐ 统一深色背景 */
}

.theme-dark .question-header,
.theme-dark .question-content,
.theme-dark .option-card,
.theme-dark .stat-item {
  background: #111827;
}

.theme-dark .question-text,
.theme-dark .option-text,
.theme-dark .result-title,
.theme-dark .stat-value,
.theme-dark .error-title {
  color: #F8FAFC;
}

.theme-dark .question-type,
.theme-dark .question-number,
.theme-dark .stat-label,
.theme-dark .error-message,
.theme-dark .loading-text {
  color: #94A3B8;
}

.theme-dark .option-indicator {
  background: #1F2937;
}

.theme-dark .loading-spinner {
  border-color: #374151;
  border-top-color: #7AA0FF;
}
