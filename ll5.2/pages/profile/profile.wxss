/* pages/profile/profile.wxss - Redesigned to Match Reference Image */

page {
  background: #F5F7FA; /* ⭐ 调整为更柔和的灰色 */
  min-height: 100vh;
}

.profile-page {
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
  background: #F5F7FA; /* ⭐ 调整为更柔和的灰色 */
}

/* ==================== Header with Blue Gradient ==================== */

.profile-header-new {
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%); /* ⭐ 改为蓝色渐变，与其他页面统一 */
  padding: 88rpx 48rpx 120rpx 48rpx; /* 底部加大，为卡片重叠留空间 ⭐ 调整后 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  border-radius: 0 0 48rpx 48rpx; /* 下方左右圆角 ⭐ */
}

/* Header Inner Wrapper - 确保居中 */
.header-inner-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* Large Avatar */
.avatar-large {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.avatar-letter {
  font-size: 72rpx;
  font-weight: 700;
  color: #4F7FE8; /* ⭐ 改为蓝色，与Header统一 */
  line-height: 1;
}

/* User Name */
.user-name-large {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.2;
  margin-bottom: 16rpx; /* 增加间距 ⭐ */
  display: block;
}

/* Email */
.user-email-text {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  display: block; /* 确保独立一行 ⭐ */
}

/* ==================== 3 White Stats Cards - Overlapping ==================== */

.stats-overlap-container {
  position: relative;
  display: flex;
  justify-content: center; /* 居中排列 ⭐ */
  gap: 22rpx; /* 增加间距 +10rpx ⭐ */
  padding: 0 26rpx; /* 精确边距 ⭐ */
  margin-top: -80rpx; /* 负margin，向上移动重叠在Header上 */
  z-index: 10; /* 确保在Header之上 */
}

.stat-mini-card {
  width: 170rpx; /* 固定宽度 - 缩减30rpx ⭐ */
  min-height: 260rpx; /* 固定高度 ⭐ */
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx 12rpx 24rpx; /* 左右padding也缩减 ⭐ */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; /* 垂直分布 ⭐ */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
  flex-shrink: 0; /* 防止压缩 ⭐ */
}

.stat-mini-card:active {
  transform: scale(0.95);
}

/* Icon Circle Background */
.icon-circle-bg {
  width: 72rpx; /* 缩小 ⭐ */
  height: 72rpx; /* 缩小 ⭐ */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx; /* 减少间距 ⭐ */
}

.orange-bg {
  background: #FFF4ED; /* ⭐ 调整为更柔和的橙色 */
}

.blue-bg {
  background: #EBF4FF; /* ⭐ 调整为更柔和的蓝色 */
}

.green-bg {
  background: #F0FDF4; /* ⭐ 调整为更柔和的绿色 */
}

.icon-emoji {
  font-size: 40rpx; /* 缩小 ⭐ */
  line-height: 1;
}

/* Big Number */
.stat-big-number {
  font-size: 48rpx; /* 缩小 ⭐ */
  font-weight: 700;
  color: #0F172A; /* ⭐ 调整为更深的黑色，提升对比度 */
  line-height: 1;
  margin-bottom: 8rpx;
}

/* Gray Label */
.stat-gray-label {
  font-size: 22rpx; /* 微调 ⭐ */
  font-weight: 400;
  color: #6B7280; /* ⭐ 调整为更深的灰色，提升可读性 */
  line-height: 1.4;
}

/* ==================== Main Content ==================== */

.main-content {
  max-width: 686rpx;
  margin: 0 auto;
  padding: 32rpx 32rpx 64rpx; /* 顶部减少间距 ⭐ */
}

/* ==================== Learning Overview Card ==================== */

.learning-overview-purple {
  background: linear-gradient(135deg, #4F7FE8 0%, #7AA0FF 100%); /* ⭐ 改为蓝色渐变，与Header统一 */
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(79, 127, 232, 0.25); /* ⭐ 调整阴影颜色为蓝色 */
}

.overview-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  display: block;
  margin-bottom: 32rpx;
  line-height: 1.2;
}

.overview-data-row {
  display: flex;
  justify-content: space-between;
  gap: 80rpx;
}

.overview-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.overview-label-small {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

.overview-value-large {
  font-size: 72rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
}

/* ==================== Menu Section ==================== */

.menu-section {
  margin-bottom: 64rpx;
}

.menu-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #F3F4F6;
  transition: all 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F5F7FA; /* ⭐ 调整为与页面背景一致 */
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #0F172A;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 48rpx;
  color: #D1D5DB; /* ⭐ 调整为更柔和的灰色 */
  line-height: 1;
}

/* Logout Item */
.logout-item {
  background: #FEF2F2; /* 保持浅红色背景 */
}

.logout-item:active {
  background: #FEE2E2; /* 保持深红色背景 */
}

.logout-text {
  color: #DC2626; /* ⭐ 调整为更深的红色，提升对比度 */
}

/* ==================== Version Info ==================== */

.text-center {
  text-align: center;
  padding: 32rpx 0;
}

.text-caption {
  font-size: 24rpx;
  line-height: 1.4;
}

.color-tertiary {
  color: #94A3B8;
}

.section-spacing {
  margin-bottom: 32rpx;
}

