/* pages/reader/reader.wxss */

.reader-container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 主题样式 */
.theme-light {
  background-color: #ffffff;
  color: #1f2937;
}

.theme-sepia {
  background-color: #f5f5dc;
  color: #3c2415;
}

.theme-dark {
  background-color: #1f2937;
  color: #f9fafb;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 8rpx solid #e5e7eb;
  border-top: 8rpx solid #2563eb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 工具栏 */
.toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  height: 88rpx;
  border-bottom: 1rpx solid;
  position: relative;
  z-index: 10;
}

.theme-light .toolbar {
  background-color: #ffffff;
  border-bottom-color: #e5e7eb;
}

.theme-sepia .toolbar {
  background-color: #f5f5dc;
  border-bottom-color: #d4c5a0;
}

.theme-dark .toolbar {
  background-color: #1f2937;
  border-bottom-color: #374151;
}

.toolbar-left,
.toolbar-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.toolbar-center {
  flex: 1;
  text-align: center;
  padding: 0 32rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: 500;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.btn-icon {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  transition: background-color 0.2s ease;
}

.btn-icon:active {
  transform: scale(0.95);
}

.theme-light .btn-icon:active {
  background-color: #f3f4f6;
}

.theme-sepia .btn-icon:active {
  background-color: #e8d5b7;
}

.theme-dark .btn-icon:active {
  background-color: #374151;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

/* 文章内容 */
.article-content {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.article-scroll {
  flex: 1;
  height: calc(100vh - 88rpx);
}

.article-header {
  padding: 48rpx 48rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid;
}

.theme-light .article-header {
  border-bottom-color: #f3f4f6;
}

.theme-sepia .article-header {
  border-bottom-color: #e8d5b7;
}

.theme-dark .article-header {
  border-bottom-color: #374151;
}

.article-title-main {
  font-size: 44rpx;
  font-weight: 600;
  line-height: 1.3;
  margin-bottom: 24rpx;
  display: block;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 26rpx;
  opacity: 0.7;
}

.meta-text {
  font-size: 26rpx;
}

.meta-divider {
  font-size: 24rpx;
}

/* 文章正文 */
.article-body {
  padding: 48rpx;
}

.paragraph-container {
  display: flex;
  margin-bottom: 48rpx;
  align-items: flex-start;
}

.paragraph-number {
  width: 60rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-right: 24rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.theme-light .paragraph-number {
  background-color: #eff6ff;
  color: #2563eb;
}

.theme-sepia .paragraph-number {
  background-color: #e8d5b7;
  color: #8b4513;
}

.theme-dark .paragraph-number {
  background-color: #374151;
  color: #60a5fa;
}

.paragraph-content {
  flex: 1;
}

.paragraph-text {
  display: block;
  text-align: justify;
  margin-bottom: 16rpx;
}

.translation-text {
  padding: 24rpx;
  margin-top: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid;
}

.theme-light .translation-text {
  background-color: #f8fafc;
  border-left-color: #3b82f6;
  color: #475569;
}

.theme-sepia .translation-text {
  background-color: #f0e6d2;
  border-left-color: #d2691e;
  color: #5d4e37;
}

.theme-dark .translation-text {
  background-color: #374151;
  border-left-color: #60a5fa;
  color: #d1d5db;
}

.translation-text text {
  font-size: 28rpx;
  line-height: 1.6;
}

/* 字体大小 */
.font-small .paragraph-text {
  font-size: 30rpx;
  line-height: 1.5;
}

.font-medium .paragraph-text {
  font-size: 34rpx;
  line-height: 1.6;
}

.font-large .paragraph-text {
  font-size: 38rpx;
  line-height: 1.7;
}

/* 行间距 */
.line-compact .paragraph-text {
  line-height: 1.4;
}

.line-normal .paragraph-text {
  line-height: 1.6;
}

.line-relaxed .paragraph-text {
  line-height: 1.8;
}

/* 文章底部间距 */
.article-footer {
  height: 120rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 48rpx;
  text-align: center;
}

.error-icon {
  width: 128rpx;
  height: 128rpx;
  opacity: 0.3;
  margin-bottom: 32rpx;
}

.error-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.error-desc {
  font-size: 28rpx;
  opacity: 0.7;
  margin-bottom: 48rpx;
}

/* 设置面板 */
.settings-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

.settings-panel {
  width: 100%;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  animation: slideUp 0.3s ease;
}

.theme-sepia .settings-panel {
  background-color: #f5f5dc;
}

.theme-dark .settings-panel {
  background-color: #1f2937;
}

.settings-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 48rpx 24rpx;
  border-bottom: 1rpx solid;
}

.theme-light .settings-header {
  border-bottom-color: #e5e7eb;
}

.theme-sepia .settings-header {
  border-bottom-color: #d4c5a0;
}

.theme-dark .settings-header {
  border-bottom-color: #374151;
}

.settings-title {
  font-size: 36rpx;
  font-weight: 600;
}

.btn-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.settings-content {
  padding: 32rpx 48rpx 48rpx;
}

.setting-group {
  margin-bottom: 48rpx;
}

.setting-label {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: block;
}

.setting-options {
  display: flex;
  gap: 16rpx;
}

.setting-option {
  flex: 1;
  padding: 20rpx 24rpx;
  text-align: center;
  border-radius: 16rpx;
  border: 2rpx solid;
  transition: all 0.2s ease;
}

.theme-light .setting-option {
  border-color: #e5e7eb;
  background-color: #f9fafb;
  color: #374151;
}

.theme-light .setting-option.active {
  border-color: #2563eb;
  background-color: #eff6ff;
  color: #1d4ed8;
}

.theme-sepia .setting-option {
  border-color: #d4c5a0;
  background-color: #f0e6d2;
  color: #5d4e37;
}

.theme-sepia .setting-option.active {
  border-color: #d2691e;
  background-color: #e8d5b7;
  color: #8b4513;
}

.theme-dark .setting-option {
  border-color: #374151;
  background-color: #111827;
  color: #d1d5db;
}

.theme-dark .setting-option.active {
  border-color: #3b82f6;
  background-color: #1e3a8a;
  color: #bfdbfe;
}

.setting-option:active {
  transform: scale(0.98);
}

.setting-option text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 文本截断 */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
