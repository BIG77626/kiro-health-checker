/** 首次主题设置弹窗组件样式 */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 680rpx;
  max-height: 85vh;
  overflow-y: auto;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  padding: 48rpx 40rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
}

.options-area {
  padding: 0 40rpx 32rpx;
}

.options-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 24rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  background-color: #ffffff;
  transition: all 0.2s ease;
}

.option-item:last-child {
  margin-bottom: 0;
}

.option-item.active {
  border-color: #2563eb;
  background-color: #eff6ff;
}

.option-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.option-icon image {
  width: 100%;
  height: 100%;
}

.option-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.option-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.option-radio {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #e5e7eb;
  transition: all 0.2s ease;
}

.radio-dot.active {
  width: 32rpx;
  height: 32rpx;
  background-color: #2563eb;
  border: 6rpx solid #ffffff;
}

.button-area {
  display: flex;
  padding: 24rpx 40rpx 40rpx;
  gap: 20rpx;
}

.btn-skip {
  flex: 1;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  background-color: #ffffff;
  color: #6b7280;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-skip:active {
  background-color: #f9fafb;
}

.btn-confirm {
  flex: 2;
  padding: 24rpx 32rpx;
  border: none;
  border-radius: 16rpx;
  background-color: #2563eb;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-confirm:active {
  background-color: #1d4ed8;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .modal-container {
    background-color: #1f2937;
  }
  
  .modal-header {
    border-bottom-color: #374151;
  }
  
  .modal-title {
    color: #f9fafb;
  }
  
  .modal-subtitle {
    color: #9ca3af;
  }
  
  .options-title {
    color: #f9fafb;
  }
  
  .option-item {
    background-color: #374151;
    border-color: #4b5563;
  }
  
  .option-item.active {
    border-color: #3b82f6;
    background-color: #1e40af;
  }
  
  .option-title {
    color: #f9fafb;
  }
  
  .option-desc {
    color: #9ca3af;
  }
  
  .btn-skip {
    background-color: #374151;
    border-color: #4b5563;
    color: #9ca3af;
  }
  
  .btn-skip:active {
    background-color: #4b5563;
  }
}