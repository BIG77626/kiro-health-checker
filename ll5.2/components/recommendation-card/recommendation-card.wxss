/* components/recommendation-card/recommendation-card.wxss */

.recommendation-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.recommendation-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.rec-content {
  flex: 1;
}

.rec-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.rec-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  flex: 1;
}

.priority-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.priority-badge.priority-high {
  background: #fef2f2;
  color: #dc2626;
}

.priority-badge.priority-medium {
  background: #fefce8;
  color: #ca8a04;
}

.priority-badge.priority-low {
  background: #f3f4f6;
  color: #6b7280;
}

.rec-desc {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: block;
}

.rec-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.rec-divider {
  color: #d1d5db;
}

.rec-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
  margin-left: 16rpx;
}

