/* 反馈按钮组件样式 - P1-002 */

.feedback-button-container {
  width: 100%;
  margin-top: 16rpx;
}

/* 按钮区域 */
.feedback-buttons {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.feedback-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  transition: all 0.3s;
}

.feedback-btn.active {
  background: #e8f5e9;
  border: 1px solid #4caf50;
}

.feedback-btn-hover {
  opacity: 0.7;
}

.feedback-btn .icon {
  font-size: 32rpx;
}

.feedback-btn .label {
  font-size: 28rpx;
  color: #666;
}

.feedback-btn.active .label {
  color: #4caf50;
  font-weight: 500;
}

/* 评论输入区域 */
.feedback-comment {
  margin-top: 16rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.feedback-comment.hide {
  display: none;
}

.feedback-comment.show {
  display: block;
  animation: slideDown 0.3s;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.comment-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1px solid #e0e0e0;
  font-size: 28rpx;
  line-height: 1.5;
}

.comment-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.btn-cancel {
  background: #fff;
  color: #666;
  border: 1px solid #e0e0e0;
}

.btn-submit {
  background: #4caf50;
  color: #fff;
}
