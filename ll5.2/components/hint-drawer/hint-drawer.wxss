/* 短链思考 - 抽屉样式 */

/* 遮罩层 */
.hint-drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 抽屉主体 */
.hint-drawer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  max-height: 85vh;
  overflow-y: auto;
  transition: transform 0.3s ease;
  z-index: 9999;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.hint-drawer.close {
  transform: translateY(100%);
}

/* 拖动条 */
.drag-bar {
  display: flex;
  justify-content: center;
  padding: 16rpx 0;
}

.drag-handle {
  width: 72rpx;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
}

/* 标题栏 */
.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.header-close {
  font-size: 40rpx;
  color: #9CA3AF;
  padding: 8rpx;
  line-height: 1;
}

/* Step通用样式 */
.drawer-step {
  padding: 32rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.drawer-step:last-of-type {
  border-bottom: none;
}

.step-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.step-tag {
  display: inline-block;
  background: linear-gradient(135deg, #FFE8B3, #FFD700);
  color: #B35900;
  font-size: 22rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
}

.step-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

.step-unlock-badge {
  margin-left: auto;
  font-size: 22rpx;
  color: #9CA3AF;
  background: #F3F4F6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* Step1样式 */
.step1 .focus-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #1F2937;
  font-weight: 500;
}

/* Step2样式 - 思维支架 */
.scaffold-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.scaffold-item {
  display: flex;
  background: #FFFBEB;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #F59E0B;
}

.scaffold-index {
  flex-shrink: 0;
  width: 48rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #F59E0B;
}

.scaffold-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
}

/* Step3样式 - 自检清单 */
.checklist {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.checklist-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.checkbox {
  flex-shrink: 0;
  font-size: 32rpx;
  color: #10B981;
}

.checklist-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
}

/* 高亮材料 */
.highlight-material {
  background: #F9FAFB;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
}

.material-label {
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
}

.material-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #1F2937;
}

.material-text .hl {
  background: #FEF3C7;
  color: #B35900;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

/* 解锁门槛 */
.unlock-gate {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  gap: 20rpx;
}

.gate-hint {
  font-size: 26rpx;
  color: #6B7280;
  text-align: center;
  line-height: 1.6;
}

.unlock-btn {
  width: 320rpx;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.unlock-btn.ready {
  background: linear-gradient(135deg, #F59E0B, #D97706);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.unlock-btn.disabled {
  background: #F3F4F6;
  color: #9CA3AF;
}

/* 底部确认按钮 */
.drawer-footer {
  padding: 24rpx 32rpx 48rpx;
  background: #FAFAFA;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #10B981, #059669);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(16, 185, 129, 0.3);
}

.confirm-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .hint-drawer {
    background: #1F2937;
  }
  
  .drawer-header {
    border-bottom-color: #374151;
  }
  
  .header-title {
    color: #F9FAFB;
  }
  
  .header-close {
    color: #9CA3AF;
  }
  
  .drawer-step {
    border-bottom-color: #374151;
  }
  
  .step-label {
    color: #F9FAFB;
  }
  
  .step1 .focus-text {
    color: #F9FAFB;
  }
  
  .scaffold-item {
    background: #374151;
  }
  
  .scaffold-text,
  .checklist-text {
    color: #E5E7EB;
  }
  
  .highlight-material {
    background: #374151;
  }
  
  .material-text {
    color: #E5E7EB;
  }
  
  .drawer-footer {
    background: #111827;
  }
}

/* 安全区域适配 */
.drawer-footer {
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
}

