/* 生词本提示弹窗样式 */

/* 遮罩层 */
.vocab-book-prompt-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 弹窗容器 */
.vocab-book-prompt-container {
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  position: relative;
  transform-origin: center;
}

/* 深色模式适配 */
.theme-dark .vocab-book-prompt-container {
  background-color: #1a1a1a;
  color: #ffffff;
}

/* 头部图标 */
.prompt-header {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.prompt-icon {
  font-size: 80rpx;
  animation: bounce 0.6s ease-out;
}

/* 标题 */
.prompt-title {
  text-align: center;
  margin-bottom: 32rpx;
}

.prompt-title text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

/* 单词信息 */
.word-info {
  background-color: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.theme-dark .word-info {
  background-color: #2a2a2a;
}

.word-main {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.word-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #007aff;
  margin-right: 16rpx;
}

.word-phonetic {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
}

.play-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  transition: all 0.2s;
}

.play-btn:active {
  transform: scale(0.95);
  background-color: #0056cc;
}

.play-icon {
  font-size: 24rpx;
  color: #ffffff;
}

.word-meaning {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.4;
}

/* 提示消息 */
.prompt-message {
  text-align: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

.hard-count {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: 500;
}

/* 建议说明 */
.prompt-suggestion {
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

/* 操作按钮 */
.prompt-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.primary-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.secondary-btn {
  background-color: #f5f5f5;
  color: #666666;
  border: 2rpx solid #e5e5e5;
}

.theme-dark .secondary-btn {
  background-color: #333333;
  color: #cccccc;
  border-color: #444444;
}

.secondary-btn:active {
  transform: scale(0.98);
  background-color: #e8e8e8;
}

/* 不再提示选项 */
.dont-show-option {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.theme-dark .dont-show-option {
  background-color: #2a2a2a;
}

.option-text {
  font-size: 26rpx;
  color: #666666;
  margin-left: 12rpx;
}

/* 关闭提示 */
.close-tip {
  text-align: center;
}

.close-tip text {
  font-size: 24rpx;
  color: #999999;
}

/* 动画效果 */
@keyframes bounce {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .vocab-book-prompt-container {
    width: 90vw;
    max-width: 600rpx;
    padding: 40rpx 32rpx;
  }

  .word-text {
    font-size: 36rpx;
  }

  .word-phonetic {
    font-size: 24rpx;
  }

  .prompt-title text {
    font-size: 32rpx;
  }

  .action-btn {
    height: 80rpx;
    font-size: 28rpx;
  }
}