/**
 * 骨架屏样式
 * 
 * 设计原则:
 * - 使用渐变色模拟内容
 * - 添加动画提示加载中
 * - 保持与真实UI相似的布局
 */

.skeleton {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 动画效果 */
.skeleton-animate {
  animation: skeleton-loading 1.5s ease-in-out infinite;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 通用元素 */
.skeleton-bar {
  height: 80rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.skeleton-line {
  height: 32rpx;
  border-radius: 4rpx;
  margin-bottom: 16rpx;
  width: 100%;
}

.skeleton-title {
  height: 48rpx;
  width: 70%;
  border-radius: 6rpx;
  margin-bottom: 24rpx;
}

.skeleton-button {
  height: 80rpx;
  width: 45%;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

/* Practice页面特定 */
.skeleton-header {
  margin-bottom: 30rpx;
}

.skeleton-content {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.skeleton-paragraph {
  margin: 30rpx 0;
}

.skeleton-options {
  margin-top: 40rpx;
}

.skeleton-option {
  height: 88rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

.skeleton-footer {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: space-between;
}

/* Vocabulary页面特定 */
.skeleton-list {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
}

.skeleton-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.skeleton-item:last-child {
  border-bottom: none;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.skeleton-item-content {
  flex: 1;
}

/* Profile页面特定 */
.skeleton-profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.skeleton-avatar-large {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.skeleton-stats {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.skeleton-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.skeleton-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
